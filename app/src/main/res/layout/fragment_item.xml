<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ItemActivityFragment"
    tools:showIn="@layout/activity_item">

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ll_picture">
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="centerCrop"
                    android:id="@+id/img_new_picture"
                android:src="@android:drawable/ic_input_add"
                />
        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/nameText"
                android:layout_weight="1" />

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rating_bar"
                android:numStars="5"
                android:stepSize="1"
                android:rating="1"
                android:isIndicator="true"
                style="?android:attr/ratingBarStyleSmall"/>
        </LinearLayout>



        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:verticalSpacing="100dp"
            android:horizontalSpacing="10dp"
            >

            <ImageView
                android:layout_width="22dp"
                android:layout_height="23dp"
                android:id="@+id/addressImg"
                android:src="@drawable/placeholder"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/addressText"
                android:layout_marginTop="5dp"/>

            <ImageView
                android:layout_width="22dp"
                android:layout_height="23dp"
                android:id="@+id/scheduleImg"
                android:src="@drawable/clock"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/scheduleText"
                android:layout_marginTop="5dp"/>

            <ImageView
                android:layout_width="22dp"
                android:layout_height="23dp"
                android:id="@+id/priceImg"
                android:src="@drawable/creditcard"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/priceText"
                android:layout_marginTop="5dp" />

        </GridLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_horizontal_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wi-Fi"
                android:id="@+id/txt_wifi"
                android:layout_gravity="center_vertical"
                android:background="@drawable/rounded_corner"
                android:layout_marginRight="@dimen/text_view_horizontal_margin"
                android:textColor="@android:color/primary_text_dark"
                android:gravity="center"
                android:paddingLeft="@dimen/text_view_horizontal_margin"
                android:paddingRight="@dimen/text_view_horizontal_margin"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Air Conditioner"
                android:id="@+id/txt_ac"
                android:layout_gravity="center_vertical"
                android:background="@drawable/rounded_corner"
                android:layout_marginRight="@dimen/text_view_horizontal_margin"
                android:textColor="@android:color/primary_text_dark"
                android:gravity="center"
                android:paddingLeft="@dimen/text_view_horizontal_margin"
                android:paddingRight="@dimen/text_view_horizontal_margin"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food"
                android:id="@+id/txt_food"
                android:layout_gravity="center_vertical"
                android:background="@drawable/rounded_corner"
                android:layout_marginRight="@dimen/text_view_horizontal_margin"
                android:textColor="@android:color/primary_text_dark"
                android:gravity="center"
                android:paddingLeft="@dimen/text_view_horizontal_margin"
                android:paddingRight="@dimen/text_view_horizontal_margin"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Talking Allow"
                android:id="@+id/txt_talking"
                android:layout_gravity="center_vertical"
                android:background="@drawable/rounded_corner"
                android:layout_marginRight="@dimen/text_view_horizontal_margin"
                android:textColor="@android:color/primary_text_dark"
                android:gravity="center"
                android:paddingLeft="@dimen/text_view_horizontal_margin"
                android:paddingRight="@dimen/text_view_horizontal_margin"
                />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Reviews"
            android:id="@+id/textView3" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Is it good?"
                android:id="@+id/textView4"
                android:layout_gravity="center_vertical"
                android:layout_weight="1" />

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rating_bar_edit"
                android:stepSize="1"/>
        </LinearLayout>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listView2"
            android:layout_gravity="center_horizontal" />


    </LinearLayout>
</LinearLayout>
